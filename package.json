{
  "name": "syncpad-enterprise",
  "version": "2.0.0",
  "description": "Enterprise-grade collaborative note-taking application with hybrid React/EJS rendering",
  "main": "app.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "echo 'No build step required for Node.js'",
    "docker:build": "docker build -t syncpad-enterprise .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:heroku": "git push heroku main",
    "deploy:vercel": "vercel --prod",
    "vercel-build": "echo 'No build step required for Vercel'",
    "lint": "echo 'No linting configured'",
    "format": "echo 'No formatting configured'",
    "health": "curl -f http://localhost:3330/health || exit 1"
  },
  "keywords": [
    "notes",
    "collaboration",
    "react",
    "ejs",
    "mongodb",
    "express",
    "enterprise",
    "hybrid-rendering",
    "jwt",
    "api"
  ],
  "author": "Enterprise Development Team",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^4.17.2",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
