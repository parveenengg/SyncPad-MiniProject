# Data Store
# Choose: mongodb | firestore
DATA_STORE=mongodb

# MongoDB (if DATA_STORE=mongodb)
MONGODB_URI=mongodb://localhost:27017/sync-pad

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Server Configuration
PORT=3330
NODE_ENV=development

# Production Configuration (for deployment)
# NODE_ENV=production
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sync-pad
# SESSION_SECRET=your-production-session-secret

# Firebase (if DATA_STORE=firestore)
# Get values from a Firebase service account (Admin SDK)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nABC...\n-----END PRIVATE KEY-----\n"
# FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com

# Optional: Email Configuration (for future features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Optional: Redis Configuration (for session storage in production)
# REDIS_URL=redis://localhost:6379
