<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.name %>'s Notes - SyncPad</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Include Navbar -->
    <%- include('partials/navbar', { user: viewer }) %>

    <!-- Main Content -->
    <div class="max-w-6xl mx-auto px-4 py-8">
        <!-- Header -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
            <div class="flex items-center gap-4">
                <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white text-2xl font-bold">
                    <%= user.name.charAt(0).toUpperCase() %>
                </div>
                <div>
                    <h1 class="text-2xl font-semibold text-gray-800"><%= user.name %>'s Public Notes</h1>
                    <p class="text-gray-600"><%= user.email %></p>
                    <p class="text-sm text-gray-500">ID: <%= user.uniqueId %></p>
                </div>
            </div>
            <div class="mt-4 flex items-center gap-4 text-sm text-gray-500">
                <span><i class="ri-calendar-line"></i> Joined <%= new Date(user.createdAt).toLocaleDateString() %></span>
                <span><i class="ri-file-list-line"></i> <%= notes.length %> public notes</span>
            </div>
        </div>

        <!-- Notes Grid -->
        <% if (notes.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% notes.forEach(note => { %>
                    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
                        <div class="mb-4">
                            <h3 class="text-lg font-semibold text-gray-800 mb-2"><%= note.title %></h3>
                            <div class="text-sm text-gray-500 mb-3">
                                <span><i class="ri-calendar-line"></i> <%= note.date %></span>
                            </div>
                        </div>
                        
                        <div class="prose prose-sm max-w-none">
                            <div class="text-gray-700 whitespace-pre-wrap"><%= note.content.substring(0, 200) %><%= note.content.length > 200 ? '...' : '' %></div>
                        </div>
                        
                        <div class="mt-4 pt-4 border-t border-gray-100">
                            <div class="flex items-center justify-between text-sm text-gray-500">
                                <span>Public Note</span>
                                <span><i class="ri-eye-line"></i> View Only</span>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <!-- No Notes Message -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
                <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="ri-file-list-line text-2xl text-gray-400"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-800 mb-2">No Public Notes</h3>
                <p class="text-gray-600 mb-6"><%= user.name %> hasn't shared any public notes yet.</p>
                <a href="/collaborators" class="bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors inline-block">
                    <i class="ri-arrow-left-line"></i> Back to Collaborators
                </a>
            </div>
        <% } %>
    </div>

    <!-- Footer -->
    <div class="mt-12 bg-white border-t border-gray-200 py-8">
        <div class="max-w-6xl mx-auto px-4 text-center">
            <p class="text-gray-600 text-sm">
                You are viewing <%= user.name %>'s public notes. Only notes marked as public are visible here.
            </p>
        </div>
    </div>
</body>
</html>
